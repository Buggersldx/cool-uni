.cl-upload-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.cl-upload-list .cl-upload {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    border-radius: 10rpx;
    border-width: 1rpx;
    border-style: dashed;
    border-color: #d9d9d9;
    box-sizing: border-box;
    position: relative;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}
.cl-upload-list .cl-upload .cl-upload__add {
      font-size: 50rpx;
      color: #8c939d;
}
.cl-upload-list .cl-upload__target {
      height: 100%;
      width: 100%;
      border-radius: 10rpx;
}
.cl-upload-list .cl-upload__remove {
      position: absolute;
      right: 10rpx;
      top: 10rpx;
      color: #dd524d;
      z-index: 1;
      line-height: normal;
      font-size: 40rpx;
}
.cl-upload-list:not(.is-disabled) .cl-upload:active {
    border-color: #409eff;
}
.cl-upload-list:not(.is-disabled) .cl-upload:active .cl-upload__add {
      color: #409eff;
}
.cl-upload-list.is-disabled .cl-upload {
    background-color: #f5f7fa;
}
.cl-upload-list.is-disabled .cl-upload .cl-upload__add {
      -webkit-transform: rotate(45deg);
              transform: rotate(45deg);
}

